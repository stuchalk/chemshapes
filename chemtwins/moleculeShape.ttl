mol:minatoms
  sh:path cto:hasConstituentAtom ;
  sh:datatype cto:atom ;
  sh:minCount 2 ;
  sh:message "Must have two or more atoms to be a molecule" ;
.

mol:minbonds
  sh:path cto:hasConstituentBond ;
  sh:datatype cto:bond ;
  sh:minCount 1 ;
  sh:message "Must have at least one bond to be a molecule" ;
.

mol:COBondShape
  a sh:NodeShape ;
  sh:targetClass cto:bond ;
  sh:property [
                sh:path cto:hasBondedAtom ;
                sh:minCount 2;
                sh:maxCount 2;
              ]
        ;
  sh:property [ # a double bond
                sh:path cto:hasBondOrder ;
                sh:hasValue 2 ;
              ]
        ;
  sh:property [
                sh:path cto:hasBondedAtom ;
                sh:node [
                        sh:targetClass cto:atom ;
                        sh:property [
                                    sh:path cto:isAtomOfElement ;
                                    sh:node [
                                                sh:targetClass cto:element ;
                                                sh:property [
                                                            sh:path cto:isElementType ;
                                                            
                                                            ]
                                                    ;
                                            ]
                                        ;
                                    ]
                                ;
                        ]
                    ;
              ]
        ;
.

mol:carbonAtom
    sh:path cto:isElement ;
    sh:class mol:carbonElement ;
.

mol:carbonElement
    sh:class cto:element ;
    sh:targetObjectsOf cea:CHEBI_33415 ;
.

mol:oxygenAtom
    sh:path cto:isAtomOfElement ;
    sh:class mol:oxygenElement ;
.

mol:oxygenElement
    sh:class cto:element ;
    sh:targetObjectsOf cea:obo:;
.
